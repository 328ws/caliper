{
  "blockchain": {
    "type": "burrow",
    "config": "benchmark/simple/burrow.json"
  },
  "command" : {
    "start": "docker-compose -f network/burrow/simplenetwork/docker-compose.yml up -d",
    "end" : "docker-compose -f network/burrow/simplenetwork/docker-compose.yml down"
  },
  "test": {
      "name": "simple",
      "description" : "Simple Benchmark",
      "clients": {
        "type": "local",
        "number": 1
      },
    "rounds": [{
        "label" : "open",
        "txNumber" : [50],
        "rateControl" : [{"type": "fixed-rate", "opts": {"tps" : 50}}],
        "arguments": {  "money": 10000 },
        "callback" : "benchmark/simple/open.js"
      }]
  },
  "monitor": {
    "type": "docker",
    "docker":{
      "name": ["all"]
    },
    "interval": 1
  }
}
